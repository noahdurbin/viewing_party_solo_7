<h1>Viewing Party</h1>

<h2>Discover Movies</h2>

<%= button_to "Top Rated Movies", "/users/#{@user.id}/movies", method: :get %> <br>

<%= form_with url: "/users/#{@user.id}/movies", method: :get, data: {turbo: false}, local: true do |form| %>
  <%= form.label :search, 'Search For Movie By Title:' %>
  <%= form.text_field :search %>
  <%= form.submit 'Search' %>
<% end %>
